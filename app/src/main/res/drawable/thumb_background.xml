<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/md_theme_light_surface" />
            <stroke android:width="1dp" android:color="@color/md_theme_light_onBackground" />
            <size android:height="15dp" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/md_theme_dark_surface" />
            <stroke android:width="1dp" android:color="@color/md_theme_dark_onBackground" />
            <size android:height="15dp" />
        </shape>
    </item>
</selector>